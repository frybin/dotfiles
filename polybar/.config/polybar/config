[colors]
icon        = ${xrdb:color3:#4ec2f7}
fg          = ${xrdb:color0:#002636}
bg	    = ${xrdb:color7:#e4e4e4}
text	    = ${xrdb:color7:#ccffffff}

[bar/top]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 34

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

;Makes the background semi-transparent using ARBG Values
background = #80000000
foreground =  ${colors.text}

line-color = ${bar/bottom.background}
line-size = 16

spacing = 2
padding-right = 5
module-margin = 4

font-0 = FuraCode Nerd Font:size=12

modules-left = i3
modules-right = volume backlight wired-network date
modules-center = title

[bar/bottom]
monitor = ${env:MONITOR:eDP1}
bottom = true
width = 100%
height = 30

background = ${bar/top.background}
foreground = ${bar/top.foreground}

line-color = ${bar/top.background}
line-size = 2

spacing = 3
padding-right = 4
module-margin-left = 0
module-margin-right = 6

font-0 = FuraCode Nerd Font:size=12

modules-left = powermenu openweathermap pkg
modules-right = temperature battery filesystem
modules-center = spotify 
tray-position = right

[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
exec = python ~/.config/polybar/spotify_status.py -f '{artist}: {song}'
format-underline = #1db954
scroll-down = playerctl previous
scroll-up = playerctl next
click-left = playerctl play-pause

[module/pkg]
type = custom/script
exec = ~/.config/polybar/updates.sh
tail = true

[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = false
format = <label-state><label-mode>

label-mode = %mode%
label-focused = %name%
label-focused-background = ${colors.bg}
label-focused-foreground = ${colors.fg}
label-unfocused-foreground = ${colors.icon}
label-unfocused-padding = 2
label-visible-padding = 2
label-urgent-padding = 2
label-mode-padding = 2
label-focused-padding = 2

